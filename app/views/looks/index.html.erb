

<h1><%= @current_user.first_name.capitalize %>'s looks</h1>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          Description
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
          
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_looks.each do |a_look| %>
      <tr>

        <td>
          <%= a_look.description %>
        </td>

        <td>
          <%= time_ago_in_words(a_look.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_look.updated_at) %> ago
        </td>

        <td>
          <a href="/looks/<%= a_look.id %>">
            Show details
          </a>
        </td>

        <td>
          <a href="/delete_look/<%= a_look.id %>">Delete look
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
